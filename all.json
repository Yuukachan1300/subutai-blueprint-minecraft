[
    {
        "hosts": "mcs",
        "remote_user": "root",
        "tasks": [
            {
                "name": "apt-update",
                "apt": {
                    "update_cache": "yes",
                    "allow_unauthenticated": "yes",
                    "upgrade": "yes"
                }
            },
            {
                "name": "install openjdk",
                "apt": {
                    "name": "openjdk-9-jre",
                    "allow_unauthenticated": "yes",
                    "update_cache": "no"
                }
            }
        ]
    }
]